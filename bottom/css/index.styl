
@import './mixin.styl'
body  
  .left
    position absolute
    left 0
    top 0
    bottom 0
    width 400px
    background #fff
    overflow hidden
    border-box()
    .logo
      font-size 0
      margin-top 120px
      margin-left 50px
    .www-logo
      font-size 0
      width 300px
      margin 0 auto
      margin-top 80px
      border-box()
      border 1px solid #ccc
      overflow hidden
      text-align center
      .img
        padding 25px 0
      .gotowww
        width 100%
        height 32px
        line-height 32px
        text-align center
        border-top 1px solid #eee
        a
          font-size 14px
    .app-logo
      width 300px
      margin 0 auto
      margin-top 80px
      border-box()
      border 1px solid #ccc
      font-size 0
      text-align center
      .img
        padding 25px 0
      .qrcode
        padding 0 0 25px
      .text
        width 100%
        height 32px
        line-height 32px
        font-size 14px
        border-top 1px solid #eee
  .login
    position absolute
    right 300px
    top 40%
    transform translateY(-50%)
    width 300px
    .icon-office
      width 110px
      height 165px
      margin 0 auto
      background url('../imgs/iconOffice.png') center center no-repeat
      background-size cover
    .login-form
      position relative
      width 100%
      height 190px
      border-radius 6px
      margin-top 4px
      background #fff
      // overflow hidden
      .qrLoginBtn
        position absolute
        top 0
        right 0
        display inline-block
        width 50px
        height 50px
        background url('../imgs/iconQrcode.png') right top no-repeat #fff
        background-size 50px
        cursor pointer
        border-top-right-radius 6px
      .account-wrap,.pass-wrap
        width 100%
        height 60px
        // line-height 60px
        border-box()
        padding 10px 0
        border-bottom 1px solid #ccc
        .icon
          vertical-align middle
          display inline-block
          width 50px
          height 40px
          background url('../imgs/iconPass.png') center center no-repeat
          background-size 18px 25px
          border-right 1px solid #ccc
        input
          vertical-align middle
          outline none
          border none
          width 200px
          height 100%
          border-box()
          padding-left 12px
          font-size 18px
          color #000
      .account-wrap
        .icon
          background url('../imgs/iconAccount.png') center center no-repeat
          background-size 20px 23px
      .miss-pass
        position relative
        text-align right
        margin 16px 4px
        .tips
          display none
          position absolute
          left 0
          top 0
          width 100%
          padding-left 14px
          text-align left
          font-size 14px
          color #b11111
      .loginBtn
        position relative
        top 0
        display block
        width 230px
        margin 0 auto
        height 46px
        line-height 46px
        font-size 18px
        color #fff
        text-align center
        border none
        background #0081dc
        border-radius 23px
    .qr-login
      display none
      position relative
      width 100%
      height 190px
      border-radius 6px
      margin-top 4px
      background #fff
      border-box()
      padding-top 36px
      padding-left 30px
      overflow hidden
      .accountLoginBtn
        position absolute
        right 0
        top 0
        width 50px
        height 50px
        background url('../imgs/pwdBtn.png') center center no-repeat
        cursor pointer
      .qrcode-wrap
        display inline-block
        width 120px
        text-align center
        .text
          display block
          font-size 12px
          color #999
        .refresh
          display block
          margin-top 10px
          font-size 13px
          color #0081dc
          padding-left 18px
          background url('../imgs/fresh.png') left 10px center no-repeat
          background-size 18px 15px
          text-align center
        .email
          background url('../imgs/email.png') left 10px center no-repeat
          background-size 18px 15px
  .language
    position absolute
    top 20px
    right 40px
    cursor pointer
    .selectedLanguage
      vertical-align middle
      display inline-block
      width 95px
      height 22px
      border 1px solid #0081dc
      background none
      color #0081dc
      padding 4px 10px
      border-box()
    .icon-down
      vertical-align middle
      display inline-block
      width 10px
      height 6px
      background url('../imgs/down.png') center center no-repeat
      background-size cover
      margin-left 4px
    .list-wrap
      display none
      position absolute
      top 22px
      left 0
      .list
        width 95px
        height 22px
        line-height 22px
        text-align center
        border 1px solid #0081dc
        border-top none
        color #000
        border-box()
        &:hover
          background #0081dc
          color #fff
