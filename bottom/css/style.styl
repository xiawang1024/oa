
@import './mixin.styl'

body  
  .left
    position absolute
    z-index 99
    left 0
    right 0
    top 0
    bottom 0
    width 100%
    height: 100%
    // background #a5c7f1
    overflow hidden
    box-sizing: border-box
	.wx-banner
		width: 100%
		height: 68%
		background: url('http://hndt.com/oa/imgs/banner.png') center center no-repeat
		background-size: cover
		box-sizing: border-box
	.wx-wrap
		width: 100%
		height: 32%
		background: #ffffff
		box-sizing: border-box
		overflow hidden
		.wx-web-wrap
			width: 1200px
			margin 30px auto
			overflow hidden			
			.wx-web
				float left
				margin 0 96px
				height: 40px
				// border 1px solid #0081dc
				box-sizing: border-box
				&.marginL0
					margin-left 0
				&.marginR0
					margin-right: 0
				.link
					padding 6px 10px
					font-size: 0
					.img
						vertical-align: middle
						height: 40px
					span 
						height: 100%
						display inline-block
						vertical-align: middle
		.wx-app-wrap
			width: 1200px
			margin 0 auto
			overflow hidden
			.wx-app
				position relative
				float left
				margin 0 55px				
				font-size: 0
				cursor pointer
				box-sizing: border-box
				&.marginL0
					margin-left 0
				&.marginR0
					margin-right: 0
				.wx-logo
					.img
						width: 85px
						height: 85px
						padding 10px
						border 1px solid #b2b2b2 
						border-radius: 6px
					.text
						margin-top: 12px
						text-align: center
						font-size: 13px
				.wx-qrcode
					position absolute
					top 0
					left 0
					display none
					font-size: 0
					.img						
						width: 108px
						height: 108px